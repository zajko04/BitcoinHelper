<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@drawable/radius</item>
        <item name="android:foreground">@drawable/ripple</item>
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:colorButtonNormal">@color/transparent_color</item>
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fadeout</item>
        <item name="android:windowTitleStyle">@style/titleStyle</item>
    </style>

    <style name="titleStyle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">25sp</item>
    </style>

    <color name="transparent_color">#009C9C9C</color>
</resources>